header.header(class="#{indexHeader == true ? 'header--index header--dark':''}" class="#{error == true ? 'header--dark':''}" class="#{dark == true ? 'header--dark':''}")
	.container
		.row
			.col-sm-2.col-xs-5.col-xxs-4
				a.header__logo(href="/")
					if (logoWhite != true)
						img.header__logo-img(src="/img/logo.png", alt="")
						img.header__logo-text-img(src="/img/logo-dark-text.png", alt="")
						img.header__logo-face-img(src="/img/logo-face.png", alt="")
					else
						img.header__logo-img(src="/img/white-logo.png", alt="")
						img.header__logo-text-img(src="/img/logo-white-text.png", alt="")
						img.header__logo-face-img(src="/img/logo-face.png", alt="")
			.col-md-4.col-md-offset-1.col-sm-4.col-xs-6.xxs-text-center
				.header__address
					span.header__address-city Москва
					a.header__address-phone(href="tel:+74993901758") +7 (499) 390-17-58
				a.header__order.js-order-trigger.hidden-xs(href="javascript:void(0);") Оставить заявку
			.col-md-5.col-sm-6.col-xs-1.col-xxs-2
				button.header__menu-btn.visible-xs(type="button")
				.header__menu-search-wrap.hidden-xs
					.header__menu
						ul.header__menu-list
							each item, i in menu
								li.header__menu-list-item
									a.header__menu-list-item-link(href="#!" class="#{i == 2 ? 'current':''}") #{item}
					.header__search
						form.header__search-form(action="#!")
							button.header__search-submit(type="submit") 
							input.header__search-input(type="text" required placeholder="Поиск по сайту")
						button.header__search-trigger.js-search-trigger(type="button")
		if (indexHeader == true)
			.row
				.col-xs-12
					.index-preview
